<h1>Listing children</h1>

<table>
  <thead>
    <tr>
      <th>Surname</th>
      <th>Forename</th>
      <th>Age</th>
      <th>Gender</th>
      <th>In school</th>
      <th>In work</th>
      <th>Occupation</th>
      <th>Parent</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @children.each do |child| %>
      <tr>
        <td><%= child.surname %></td>
        <td><%= child.forename %></td>
        <td><%= child.age %></td>
        <td><%= child.gender %></td>
        <td><%= child.in_school %></td>
        <td><%= child.in_work %></td>
        <td><%= child.occupation %></td>
        <td><%= "#{child.parent.surname}, #{child.parent.forename}" %></td>
        <td><%= link_to 'Show', child %></td>
        <td><%= link_to 'Edit', edit_child_path(child) %></td>
        <td><%= link_to 'Destroy', child, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

