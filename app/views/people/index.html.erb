<h1>Listing people</h1>

<%= link_to 'New Person', new_person_path %>

<table>
  <thead>
    <tr>
      <th>Surname</th>
      <th>Forename</th>
      <th>Age</th>
      <th>Occupation</th>
      <th>Industry</th>
      <th>Husband's Occupation</th>
      <th>Position in household</th>
      <th>Relationship status</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.surname %></td>
        <td><%= person.forename %></td>
        <td><%= person.age %></td>
        <td><%= person.occupation %></td>
        <td><%= person.industry %></td>
        <td><%= person.husbands_occupation %></td>
        <td><%= person.position_in_household %></td>
        <td><%= person.relationship_status.description %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
